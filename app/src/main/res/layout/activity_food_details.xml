<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FoodDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5sp">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/back_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại món"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#FF4646"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="75sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="237dp"
        android:src="@drawable/slider_1"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bánh mì kẹp thịt"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#FF4646"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/size_box_red"
            android:backgroundTint="#FF4646"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="S"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:text="Small size"
                android:textColor="@color/white"
                android:textSize="10dp"/>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/size_box_price"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="13.000 VNĐ"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/size_box_red"
            android:backgroundTint="#FF4646"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="M"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:text="Medium size"
                android:textColor="@color/white"
                android:textSize="10dp"/>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/size_box_price"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="13.000 VNĐ"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/size_box_red"
            android:backgroundTint="#FF4646"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="L"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:text="Large size"
                android:textColor="@color/white"
                android:textSize="10dp"/>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/size_box_price"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="13.000 VNĐ"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170sp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Mô tả"
            android:textColor="@color/main_color"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="303dp"
            android:layout_height="91dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="Pizza bao gồm nhiều chất dinh dưỡng chứa nhiều chất xơ và chất đạm thơm ngon mời bạn ăn nha"
            android:textColor="@color/main_color"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bottom_add_to_cart">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="13.000 VNĐ"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="Tổng cộng"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </LinearLayout>
        <Button
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="Thêm vào giỏ hàng"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_rounded_add_to_cart"
            android:layout_marginLeft="28dp"/>

    </LinearLayout>

</LinearLayout>