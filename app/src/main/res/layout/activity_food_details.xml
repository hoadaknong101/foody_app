<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FoodDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="11sp"
        android:layout_marginTop="5sp"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:id="@+id/btnBack"
            android:contentDescription="@string/back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/back_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food_type"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#FF4646"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="75sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:contentDescription="@string/content_description_image"
        android:layout_width="wrap_content"
        android:layout_height="237dp"
        android:src="@drawable/slider_1"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meat_banh_mi"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#FF4646"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="11sp"
        android:layout_marginEnd="0dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layout_size_S"
            android:layout_marginStart="11sp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/size_box_red"
            android:backgroundTint="#FF4646"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/size_s"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:text="@string/size_s_describe"
                android:textColor="@color/white"
                android:textSize="11sp"/>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="30sp"
                android:background="@drawable/size_box_price"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="@string/money_text"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_size_M"
            android:layout_marginStart="35dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/size_box_red"
            android:backgroundTint="#FF4646"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/size_m"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:text="@string/size_m_describe"
                android:textColor="@color/white"
                android:textSize="11sp"/>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="30sp"
                android:background="@drawable/size_box_price"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="@string/money_text"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_size_L"
            android:layout_marginStart="35dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/size_box_red"
            android:backgroundTint="#FF4646"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/size_l"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:text="@string/size_l_describe"
                android:textColor="@color/white"
                android:textSize="11sp"/>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="30sp"
                android:background="@drawable/size_box_price"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="@string/money_text"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170sp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11sp"
            android:text="@string/describe"
            android:textColor="@color/main_color"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="303dp"
            android:layout_height="91dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:text="@string/example_food_describe"
            android:textColor="@color/main_color"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bottom_add_to_cart">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="11sp"
                android:text="@string/money_text"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:text="@string/total"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="@string/add_to_cart"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_rounded_add_to_cart"
            android:layout_marginStart="28dp"/>

    </LinearLayout>

</LinearLayout>