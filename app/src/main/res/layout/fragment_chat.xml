<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="951px"
        android:layout_height="230px"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:background="@drawable/bg_function">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="115px"
            android:background="@color/main_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ĐƠN HÀNG"
                android:textColor="@color/white"
                android:fontFamily="@font/notop_sans_regular"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115px"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="317px"
                android:layout_height="115px"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@color/main_color">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Đang đến"
                    android:textColor="@color/white"
                    android:fontFamily="@font/notop_sans_regular"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="317px"
                android:layout_height="115px"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Lịch sử"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notop_sans_regular"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="317px"
                android:layout_height="115px"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Đơn nháp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notop_sans_regular"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="951px"
        android:layout_height="1500px"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/bg_function"
        android:elevation="6dp">

        <ImageView
            android:layout_width="231dp"
            android:layout_height="309dp"
            android:layout_gravity="center"
            android:src="@drawable/null_info" />
    </FrameLayout>

</LinearLayout>