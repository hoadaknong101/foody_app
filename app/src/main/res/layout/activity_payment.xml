<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="47sp"
        android:background="@color/main_color"
        android:layout_marginBottom="20sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/payment"
            android:textColor="@color/white"
            android:fontFamily="@font/notop_sans_regular"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:textColor="#202020"
            android:fontFamily="@font/notop_sans_regular"
            android:layout_gravity="start"
            android:gravity="center"/>
        <EditText
            android:id="@+id/editText_payment_name"
            android:autofillHints="name"
            android:inputType="text"
            android:layout_width="350sp"
            android:layout_height="50sp"
            android:maxLines="1"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/example_full_name"
            android:paddingStart="10sp"
            android:paddingEnd="0sp"
            android:layout_marginTop="2sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_phone"
            android:textColor="#202020"
            android:fontFamily="@font/notop_sans_regular"
            android:layout_gravity="start"
            android:gravity="center"/>
        <EditText
            android:id="@+id/editText_payment_phone"
            android:inputType="number"
            android:autofillHints="phone"
            android:layout_width="350sp"
            android:layout_height="50sp"
            android:maxLines="1"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/hint_phone"
            android:maxLength="10"
            android:paddingStart="10sp"
            android:paddingEnd="0sp"
            android:layout_marginTop="2sp"
            tools:ignore="TextFields" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textColor="#202020"
            android:fontFamily="@font/notop_sans_regular"
            android:layout_gravity="start"
            android:gravity="center"/>
        <EditText
            android:id="@+id/editText_payment_address"
            android:autofillHints="postalAddress"
            android:inputType="text"
            android:layout_width="350sp"
            android:layout_height="50sp"
            android:maxLines="1"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/example_address"
            android:paddingStart="10sp"
            android:paddingEnd="0sp"
            android:layout_marginTop="2sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnThanhToanThanhToan"
        android:layout_marginTop="17sp"
        android:layout_width="350sp"
        android:layout_gravity="center"
        android:background="@drawable/bg_box_rounded_red"
        android:textColor="@color/white"
        android:text="@string/payment"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnThanhToanTroLai"
        android:layout_marginTop="17sp"
        android:layout_width="350sp"
        android:layout_gravity="center"
        android:background="@drawable/bg_box_rounded_red"
        android:textColor="@color/white"
        android:text="@string/cancel"
        android:layout_height="wrap_content"/>
</LinearLayout>